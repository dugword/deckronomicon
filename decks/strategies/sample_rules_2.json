{
  "rules": [
    {
      "name": "Play Foundry Inspector in Setup",
      "phase": "setup",
      "when": {
        "hand_contains": [
          "Foundry Inspector"
        ],
        "battlefield_lacks": [
          "Foundry Inspector"
        ],
        "mana_available": ">=3"
      },
      "then": {
        "action": "play",
        "target": "Foundry Inspector"
      },
      "priority": 10,
      "enabled": true
    },
    {
      "name": "Cast Candy Trail to Storm",
      "phase": "combo",
      "when": {
        "hand_contains_any": [
          "Candy Trail",
          "Chromatic Star"
        ],
        "mana_available": ">=1",
        "storm": ">=4"
      },
      "then": {
        "action": "play",
        "target": "Candy Trail"
      },
      "priority": 5,
      "enabled": true
    },
    {
      "name": "Pass if Nothing Else",
      "phase": "any",
      "when": {},
      "then": {
        "action": "pass",
        "target": ""
      },
      "priority": 0,
      "enabled": true
    }
  ],
  "choice_rules": [
    {
      "when": {
        "prompt_contains": "Scry"
      },
      "then": {
        "choose": "top"
      },
      "enabled": true
    }
  ]
}